<view class="user_info_wrap">
  <view wx:if="{{userinfo.avaterUrl}}" class="user_img_wrap">
     <image class="user_bg" src="{{userinfo.avaterUrl}}" />
     <view class="user_info">
       <image class="user_icon" src="{{userinfo.avaterUrl}}" />
       <view class="user_name">{{userinfo.nikeName}}</view>
     </view>
  </view>
  <view wx:else class="user_btn">
     <navigator url="/pages/login/index">登录</navigator>
  </view>
</view>